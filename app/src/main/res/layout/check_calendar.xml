<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#e6e6e6"
    android:fillViewport="true" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Calendar"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:background="#3d5c87"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/setBtn"
                android:background="@drawable/dot"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"/>
            <Button android:id="@+id/treemapBtn"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/_48sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_centerHorizontal="true"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:background="@drawable/round_button_white"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:text="Treemap"/>
            <Button android:id="@+id/calendarBtn"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:background="@drawable/round_button1_gray"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:text="Calendar"/>
            <ImageButton
                android:id="@+id/recordBtn2"
                android:background="@drawable/add"
                android:layout_width="@dimen/_23sdp"
                android:layout_height="@dimen/_23sdp"
                android:gravity="right"
                android:layout_marginLeft="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_20sdp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/占个位置"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp"
            android:text="日历在此！！！！"/>
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/textview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/_390sdp"
            android:textSize="16sp"
            android:background="@drawable/graypanel"
            android:text="我是用来占位置的textview" />
        <ImageButton
            android:id="@+id/popBtn"
            android:background="@drawable/direction"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_250sdp"
            android:layout_marginTop="@dimen/_400sdp"/>
    </RelativeLayout>
</ScrollView>