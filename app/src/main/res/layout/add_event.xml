<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#e6e6e6"
    android:fillViewport="false">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.addEvent"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:background="#3d5c87"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp">
            <Button android:id="@+id/cancelBtn"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@android:color/transparent"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="Cancel"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <Button android:id="@+id/saveBtn"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@android:color/transparent"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="Save" />
        </LinearLayout>
        <EditText
            android:id="@+id/eventTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_80sdp"
            android:background="@drawable/panel"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:hint="Title"
            android:inputType="text"
            android:scrollbars = "vertical"
            android:padding="@dimen/_20sdp" />
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/eventSwitch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:padding="5dp"
            android:layout_marginTop="@dimen/_150sdp"
            android:text="All-day Event"
            android:switchMinWidth="@dimen/_30sdp"
            android:textSize="18sp"
            android:thumb="@drawable/selector_thumb"
            android:track="@drawable/selector_track" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_195sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="Start Time"
            android:padding="@dimen/_15sdp" />
        <Button
            android:id="@+id/startDateButton"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginLeft="@dimen/_160sdp"
            android:layout_marginTop="@dimen/_200sdp"
            android:textColor="@color/black"
            android:textSize="18sp"
            style="?android:spinnerStyle" />
        <Button
            android:id="@+id/startTimeButton"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginLeft="@dimen/_235sdp"
            android:layout_marginTop="@dimen/_200sdp"
            android:textColor="@color/black"
            android:textSize="18sp"
            style="?android:spinnerStyle" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_240sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="End Time"
            android:padding="@dimen/_15sdp" />
        <Button
            android:id="@+id/endDateButton"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginLeft="@dimen/_160sdp"
            android:layout_marginTop="@dimen/_245sdp"
            android:textColor="@color/black"
            android:textSize="18sp"
            style="?android:spinnerStyle" />

        <Button
            android:id="@+id/endTimeButton"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginLeft="@dimen/_235sdp"
            android:layout_marginTop="@dimen/_245sdp"
            android:textColor="@color/black"
            android:textSize="18sp"
            style="?android:spinnerStyle" />
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/countSwitch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:padding="5dp"
            android:layout_marginTop="@dimen/_280sdp"
            android:text="Counting Days Event"
            android:switchMinWidth="@dimen/_30sdp"
            android:textSize="18sp"
            android:thumb="@drawable/selector_thumb"
            android:track="@drawable/selector_track" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_325sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="Remarks"
            android:padding="@dimen/_15sdp" />
        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_370sdp"
            android:background="@drawable/panel"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:hint="Description"
            android:padding="@dimen/_20sdp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/treeSwitch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_440sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:padding="5dp"
            android:switchMinWidth="@dimen/_30sdp"
            android:text="Show In Treemap"
            android:textSize="18sp"
            android:thumb="@drawable/selector_thumb"
            android:track="@drawable/selector_track" />
        <ImageButton
            android:id="@+id/treeBtn"
            android:background="@drawable/btn"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_500sdp"
            android:padding="@dimen/_15sdp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_490sdp"
            android:layout_marginLeft="@dimen/_50sdp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="Treemap Setting"
            android:padding="@dimen/_15sdp" />

    </RelativeLayout>
</ScrollView>